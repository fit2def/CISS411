@model Event
<!-- Container (Events Section) -->
<div class="w3-content w3-container w3-padding-64" id="Events">
    <h3 class="w3-center">Sign Up For Events</h3>
    <div class="w3-row w3-padding-32 w3-section">
        <div class="w3-col m6 w3-container">
            <img alt=@Model.Image.AltText src="~/Images/@Model.Image.FileName" class="img-responsive" />
        </div>

        <div class="w3-col m6 w3-panel">
            @if (User.Identity.IsAuthenticated)
            {
                <form action="" target="_blank">
                    <div class="w3-row-padding" style="margin:0 -16px 8px -16px">
                        <div class="w3-half">
                            <input class="w3-input w3-border" type="text" placeholder="Name" required name="Name">
                        </div>
                        <div class="w3-half">
                            <input class="w3-input w3-border" type="text" placeholder="Email" required name="Email">
                        </div>
                    </div>
                    <input class="w3-input w3-border" type="text" placeholder="Message" required name="Message">
                    <button class="w3-button w3-black w3-right w3-section" type="submit">
                        <i class="fa fa-paper-plane"></i> Sign Up
                    </button>
                </form>
            }

            else
            {
                <button asp-controller="Account" asp-action="Signup" class="center-button btn-success">Register for an account</button>

            }
        </div>
    </div>
</div>