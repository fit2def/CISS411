


<div id="id01" class="modal">
    <form name="loginForm" class="modal-content animate" novalidate>
        
        <div class="imgcontainer">
            <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
        </div>

        <div class="container">
           
            <input type="text" name="email" placeholder="Enter Email" ng-model="loginCtrl.email" ng-pattern="/ccis.edu$/" required />
            <span ng-cloak ng-show="loginForm.email.$error.required && loginForm.email.$dirty" class="text-warning">You must provide your e-mail address</span>
            <span ng-cloak ng-show="loginForm.email.$error.pattern && loginForm.email.$dirty" class="text-warning">You must provide a Columbia College e-mail address</span>
            <input type="password" name="password" placeholder="Enter Password" ng-model="loginCtrl.password" required />
            <span ng-cloak ng-show="loginForm.password.$error.required && loginForm.password.$dirty" class="text-warning">You must provide a password</span>
            <button type="submit" ng-click="loginCtrl.login()" id="Button" ng-disabled="loginForm.$invalid">Login</button>
            <span ng-cloak id="incorrectCredentials" ng-show="loginCtrl.invalidCredentials" class="text-warning">Email or password incorrect</span>
           
        </div>
        <p style="text-align: center;">Don't have an account? <a asp-controller="Account" asp-action="Signup">Sign Up</a></p>
    </form>
</div>


